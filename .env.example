GOOGLE_API_KEY=your_google_api_key_here

# Auth (JWT)
JWT_SECRET=change_me_in_production

# Persistence (Railway Volume recommended mounted at /app/data)
DATABASE_URL=sqlite:////app/data/app.db

# Chroma persistence directories (inside the Volume)
CHROMA_MEMORY_DIR=/app/data/chroma_memory
CHROMA_KNOWLEDGE_DIR=/app/data/chroma_knowledge

# Models and temperature
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_TEMPERATURE=0.4
GEMINI_CONTEXT_MODEL=gemini-2.5-flash-lite
GEMINI_CONTEXT_TEMPERATURE=0.7
EMBEDDINGS_PROVIDER=fastembed
FASTEMBED_MODEL=BAAI/bge-small-en-v1.5